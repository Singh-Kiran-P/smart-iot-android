<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/nav_grey"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:background="@color/nav_grey_light"
        android:id="@+id/android_card_view_example2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:background="@color/nav_grey_light"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/cardLogs_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:textSize="10dp" />

            <TextView
                android:textColor="@color/white"

                android:id="@+id/cardviewLogs_title"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="201dp"
                android:layout_toLeftOf="@id/cardLogs_date"
                android:paddingBottom="5dp"
                android:text="Viral "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/cardEndpoint"
                android:layout_width="158dp"
                android:textColor="#8b8b8b"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="0dp"
                android:paddingBottom="5dp"
                android:text="User:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardviewLogs_title"
                android:layout_marginTop="0dp"
                android:layout_marginRight="160dp"
                android:layout_toLeftOf="@+id/cardLogs_date"
                android:text="Permission asked for ->"
                android:textColor="#8b8b8b" />

            <TextView
                android:id="@+id/cardValue"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textColor="@color/white"

                android:layout_below="@+id/cardviewLogs_title"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="55dp"
                android:layout_toLeftOf="@+id/cardLogs_date"
                android:text="Free android tutorials and examples for beginners and expert."
                android:textAlignment="textEnd"
        />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

