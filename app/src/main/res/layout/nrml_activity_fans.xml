<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.UserNormal.Acticitys.Iot_Devices.FansActivity"
    android:orientation="vertical"
    android:background="@color/nav_grey">



    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchButton_FAN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Fan1                    "
        android:textColor="@color/white"
        android:textOff="OFF"
        android:textOn="ON"
        android:textSize="25sp"
        android:textStyle="bold"
        android:thumb="@drawable/sw_thumb"
        app:showText="true"
        app:track="@drawable/sw_track" />

    <Button
        android:layout_width="38dp"
        android:layout_height="25dp"
        android:layout_marginVertical="80dp"
        android:onClick="request_Fan01"

        android:background="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/imageView_FAN"
        android:layout_width="106dp"
        android:layout_height="77dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/switchButton_FAN1" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchButton_FAN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Main Fan            "
        android:textColor="@color/white"
        android:textOff="OFF"
        android:textOn="ON"
        android:textSize="25sp"
        android:textStyle="bold"
        android:thumb="@drawable/sw_thumb"
        app:showText="true"
        android:layout_marginVertical="140dp"
        app:track="@drawable/sw_track" />

    <ImageView
        android:id="@+id/imageView_FAN2"
        android:layout_width="106dp"
        android:layout_height="77dp"
        android:layout_marginVertical="120dp"

        android:layout_alignParentRight="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/switchButton_FAN2" />
    <Button
        android:onClick="request_FanMain"
        android:layout_width="38dp"
        android:layout_height="25dp"
        android:layout_marginVertical="180dp"
        android:background="@android:drawable/ic_input_add" />
</RelativeLayout>