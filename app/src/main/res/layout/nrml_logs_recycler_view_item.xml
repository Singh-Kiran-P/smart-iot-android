<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/nav_grey"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/android_card_view_example2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:elevation="4dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/cardLogs_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/cardviewLogs_title"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="172dp"
                android:layout_toLeftOf="@id/cardLogs_date"
                android:paddingBottom="5dp"
                android:text="Viral Android"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/cardEndpoint"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="216dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_toLeftOf="@id/cardLogs_date"
                android:paddingBottom="5dp"
                android:text="Viral Android"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/card_name"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardviewLogs_title"
                android:layout_marginRight="62dp"
                android:layout_toLeftOf="@+id/cardLogs_date"
                android:text="Free android tutorials and examples for beginners and expert."
                android:textColor="#8b8b8b" />

            <TextView
                android:id="@+id/cardValue"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/cardviewLogs_title"
                android:layout_marginTop="3dp"
                android:layout_marginRight="-28dp"
                android:layout_toLeftOf="@+id/cardLogs_date"
                android:text="Free android tutorials and examples for beginners and expert."
                android:textAlignment="textEnd"
                android:textColor="#8b8b8b" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

