<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.singhkiran.smartiot">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icons8_raspberry_pi"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_icons8_raspberry_pi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".UI.UserNormal.Iot_Devices.LedActivity"></activity>
        <activity android:name=".UI.UserNormal.NavigationUi.NormalLoadAppActivity" />
        <activity android:name=".UI.Auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.Auth.SignupActivity"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme" />
        <activity android:name=".JsonRequests.Login.Login_Request" />
        <activity android:name=".UI.UserNormal.NavigationUi.Fragments.Side_Nav.Fragment_Profile" />
        <activity android:name=".UI.UserAdmin.NavigationUi.AdminLoadAppActivity" />
    </application>

</manifest>